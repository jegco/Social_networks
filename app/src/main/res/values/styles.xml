<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="toolbar_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="navigationIcon">@drawable/ic_menu_black_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="google_plus_theme" >
        <item name="colorPrimary">@color/colorPrimary_google</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_google</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="faceb_theme" >
        <item name="colorPrimary">@color/colorPrimary_facebook</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_facebook</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="instagram_theme" >
        <item name="colorPrimary">@color/colorPrimary_instgram</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_instagram</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="twitter_theme" >
        <item name="colorPrimary">@color/colorPrimary_twitter</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_twitter</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
